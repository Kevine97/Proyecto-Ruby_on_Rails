
 <div class="row justify-content-center ">
<div class="col-sm-12 col-xl-9 col-md-12 col-12">
<p id="notice"><%= notice %></p>

<h1 class="text-center mt-5 ">C A R T E L E R A</h1>
<hr class="mb-5">
<div class="row text-center">
<% @movies.each do |movie| %>
      <div class="col-lg-3 col-md-6 mb-4">
        <div class="card h-100">
          <%= image_tag movie.picture.thumb.url, class: "figure-img img-fluid img-thumbnail rounded" %>
          <div class="card-body">
            <h4 class="card-title"><%= movie.name %></h4>
            <p class="card-text"><strong>Estreno: <%= movie.date_time_movie %></strong> </p>
            <p class="card-p card-text">Duracion: <%= movie.duration %></p>
            <p class="card-cine card-text">Cine: <%= movie.cine.name %></p>  
          </div>
        </div>
      </div>
      <% end %>
    </div>

</div>
</div>

