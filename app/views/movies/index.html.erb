<div class="row justify-content-center ">
<div class="col-sm-12 col-xl-9 col-md-12 col-12">
<p id="notice"><%= notice %></p>

<h1 class="text-center mb-3">Sección de peliculas</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Nombre</th>
      <th>Duracion</th>
      <th>Fecha Estreno</th>
      <th>Imagen</th>
      <th>Cine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.name %></td>
        <td><%= movie.duration.strftime("%H:%M") %></td>
        <td><%= movie.date_time_movie.strftime("%F  Hora: %H:%M") %></td>
        <td><%= image_tag movie.picture.thumb.url, class: "figure-img img-fluid img-thumbnail rounded" %></td>
       <td><%= movie.cine.name %></td>
        <td><%= link_to "Ver", movie, class: " btn btn-light far fa-eye " %></td>
        <td><%= link_to "Editar", edit_movie_path(movie), class: "btn btn-light far fa-edit" %></td>
        <td><%= link_to "Eliminar", movie, method: :delete, data: { confirm: "¿Esta seguro?" }, class: "btn btn-light far fa-trash-alt " %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="col text-center">
<%= link_to "Agregar pelicula", new_movie_path, class: "btn-centro btn btn-dark" %>
</div>
</div>
</div>