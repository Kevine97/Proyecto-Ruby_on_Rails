<div class="row justify-content-center margen">
<div class="col-sm-6 col-xl-4 col-md-6 col-6">
<div class = "form-container">
<h2  class="card-header text-center mb-4 ">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-4" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "btn btn-dark  btn-block mb-4" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>